<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root type="Tab" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <GridPane fx:id="gridPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <stylesheets>
              <URL value="@messageform.css" />
          </stylesheets>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="100"/>
          <ColumnConstraints hgrow="SOMETIMES" percentWidth="100"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="receiverLabel"  GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="receiverSelector" GridPane.rowIndex="2" />
            <Label fx:id="titleLabel" GridPane.rowIndex="3" />
            <TextField fx:id="titleField" GridPane.rowIndex="4" />
            <Label fx:id="messageLabel"  GridPane.rowIndex="5" />
            <TextArea fx:id="messageField" GridPane.rowIndex="6" prefHeight="300.0" />
            <Label fx:id="counter" GridPane.rowIndex="7"/>
            
            <ButtonBar fx:id="buttonBar" prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="10">
              <buttons>
                <Button fx:id="cancelButton" mnemonicParsing="false"  />
                  <Button fx:id="sendButton" mnemonicParsing="false"  />
              </buttons>
            </ButtonBar>
            <Label fx:id="mainTitle" id="title"  />
         </children>
      </GridPane>
   </content>
</fx:root>
