<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="root" prefWidth="400" prefHeight="400" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appuser.LoginController">
   <children>
      <VBox alignment="TOP_LEFT" spacing="10.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="50.0" AnchorPane.rightAnchor="50.0">
         <stylesheets>
            <URL value="@login.css" />
         </stylesheets>
         <children>
            <Label fx:id="loginLabel" id="loginLabel" text="%login"/>
            <Label fx:id="usernameLabel" text="%username" />
            <TextField fx:id="usernameField" promptText="%username" onKeyReleased="#setUser"/>
            <Label fx:id="passwordLabel" text="%password"/>
            <PasswordField fx:id="passwordField" promptText="%password"/>
            <Label fx:id="messageLabel" />
            <Button fx:id="loginButton" text="%login" mnemonicParsing="true" onAction="#login" />
         </children>
      </VBox>
   </children>
</AnchorPane>
